<div class="panel-header">
  <div class="page-inner py-2">
    <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row">
      <div>
        <h5 class="op-7 mb-2 fw-bold">Top 100 Most Frequently Short Urls</h5>
      </div>
      <div class="ml-md-auto py-2 py-md-0">
        <%= link_to 'Back', short_urls_path, :class => 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="display table table-bordered table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Url</th>
                <th>Shortened URL</th>
                <th>Visit Count</th>
              </tr>
            </thead>

            <tbody>
              <% @short_urls.each_with_index do |short_url, i| %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= short_url.url %></td>
                  <td><%= link_to redirect_to_url_url(short_url.shortened_url), redirect_to_url_path(short_url.shortened_url), target: "_blank" %></td>
                  <td><%= short_url.visit_count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>